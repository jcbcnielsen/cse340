<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }); %>
    </ul>
<% } %>

<h2>Welcome, <%= locals.accountData.account_firstname %>.</h2>

<p id="accountUpdateLink"><a href="/account/update/<%= locals.accountData.account_id %>">
    Update your <% if (locals.emplAuth) { %>personal <% } %>account information</a></p>

<% if (locals.emplAuth) { %>
    <p id="clientManageLink"><a href="/account/list">
        Manage Client <% if (locals.adminAuth) { %>and Employee <% } %>Accounts</a></p>
    <h3>Inventory Management</h3>
    <p id="invManageLink"><a href="/inv/manage">Manage Company Inventory</a></p>
<% } %>